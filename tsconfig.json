{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@/*": ["./*"],
    }
  },
  "include": ["./**/*.ts", "./typechain-types"],
  "exclude": ["./dist/**/*", "test", "hardhat.config.ts", "jest.config.ts"]
}
